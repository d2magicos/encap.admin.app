# en caso sea una instalacion local /carpeta/
RewriteBase https://sistemas.encap.edu.pe/bolsa_de_trabajo/

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l

RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]

RewriteEngine on
RewriteCond %{HTTP_HOST} ^sistemas.encap.edu.pe/bolsa_de_trabajo [NC,OR]
RewriteCond %{HTTP_HOST} ^www.sistemas.encap.edu.pe/bolsa_de_trabajo [NC]
RewriteRule ^(.*)$ https://buscatuempleo.pe/$1 [L,R=301,NC]

